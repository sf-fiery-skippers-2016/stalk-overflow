<%= erb :'_error', layout: false, locals: {user: @question} %>

<div class="row">
    <h1>What do you want to know?</h1>
    <form class="col s12" action="/users/1/questions" method="post">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate" name="title">
          <label for="icon_prefix">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate" name="body">
          <label for="icon_prefix">Question</label>
        </div>
      </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>

    </form>
  </div>

