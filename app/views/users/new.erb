  <%= erb :'_error', layout: false, locals: { user: @user } %>
  <div class="row">
    <form class="col s12" action="/users" method="post">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" name="user[username]" class="validate">
          <label for="icon_prefix">Username</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="icon_telephone" name="user[email]" type="email" class="validate">
          <label for="icon_input">Email</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">password</i>
          <input id="icon_telephone" name="user[password]" type="password" class="validate">
          <label for="icon_input">Password</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Register me
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
